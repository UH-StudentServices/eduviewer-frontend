server {
    listen 8080;
    server_name ${SERVER_NAME};

    gzip on;
    gzip_types      text/plain text/css application/javascript application/x-javascript text/javascript;

    server_tokens off;

    etag off;

    location / {
      alias /usr/src/app;
      try_files /$uri /index.html =404;

      add_header Access-Control-Allow-Origin * always;
      add_header X-Content-Type-Options "nosniff";
      add_header Referrer-Policy "no-referrer"; 
      add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
      # frame-ancestors has redundant *.helsinki.fi to cover other possible use cases that we don't know about
      add_header Content-Security-Policy "default-src 'self' https://*.helsinki.fi; frame-ancestors 'self' https://studies.helsinki.fi/ https://studies-qa.it.helsinki.fi/ https://eduviewer.it.helsinki.fi https://eduviewer-qa.it.helsinki.fi https://*.helsinki.fi; script-src 'self' https://eduviewer.it.helsinki.fi https://eduviewer-qa.it.helsinki.fi https://consent.cookiebot.com https://consentcdn.cookiebot.com; style-src 'self' https://eduviewer.it.helsinki.fi https://eduviewer-qa.it.helsinki.fi; connect 'self' https://*.helsinki.fi https://consentcdn.cookiebot.com"; child 'self' https://consentcdn.cookiebot.com;
      expires 100;
      etag on;
    }
}
